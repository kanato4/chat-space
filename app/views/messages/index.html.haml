= render partial: "layouts/flash-box" 
.wrapper
  = render partial: "chat-side"
  .chat-main
    .main-header
      .left-box
        .left-box__current-group
          グループ名
        %ul.left-box__member-list
          Member：
          %li.member
            test_user
          %li.member
            aaaaaa
      .main-header__edit-btn
        = link_to edit_group_path(current_user) do
          Edit
    .messages
      .message
        .message__upper-info
          .message__upper-info__talker
            test_user
          .message__upper-info__date
            2019/08/26(Mon) 00:00:00
        .message__text
          こんにちは
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__input-box', placeholder: 'type a message'
        = f.label :image, class: 'form__image' do
          = fa_icon "picture-o", class: "icon"
          = f.file_field :image, class: 'hidden'
        =f.submit 'Send', class: 'form__submit'